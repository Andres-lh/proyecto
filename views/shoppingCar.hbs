{{#if products }}

<div class="row mt-5">
    <div class="col-md-8 offset-md-2">

        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:40%">Producto</th>
                    <th style="width:10%">Precio</th>
                    <th style="width:8%">Cantidad</th>
                    <th style="width:22%" class="text-center">Subtotal</th>
                    <th style="width:20%">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                {{#each products }}
                <tr>
                    <td>{{ this.item.title }}</td>
                    <td class="text-center">${{ this.item.price }}</td>
                    <td class="text-center">{{ this.qty }}</td>
                    <td class="text-center">${{ this.price }}</td>
                    <td>
                        <a href="/remove/{{ this.item._id }}" class="btn btn-danger btn-sm"><i
                                class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>


    </div>
</div>
<div class="row mt-5">
    <div class="col-md-8 offset-md-2">
        <strong>Total: ${{ totalPrice }}</strong>
    </div>
</div>
<hr>
<div class="row mt-5">
    <div class="col-md-6 offset-md-3">
        <a href='/checkout' role="button" class="btn btn-success">
            Pagar
        </a>
    </div>
</div>
{{ else }}

<div class="row mt-5">
    <div class="col-md-6 offset-md-3">
        <div class="alert alert-success text-center" role="alert">
            No hay productos agregados
        </div>
    </div>
</div>
{{/if}}