<h1>{{title}}</h1>
<p>Este es nuestro cat√°logo de {{title}}</p>

<div class="container">
    {{# each products }}

    <div class="row mt-5">
        {{# each this }}
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <img src="{{ this.imagePath }}" alt="" class="img-fluid zoom" style="height: 200px;">
                    <hr />
                    <h3>{{ this.title }}</h3>
                    <p class="description"></p>
                    <div class="price">
                        ${{ this.price }}
                    </div>
                    <div class="row">
                        <div class="col-md-8"></div>
                        <div class="col-md-2 offset-md-1">
                            <a href="/cart/add-to-cart/{{this.id}}" class="btn btn-dark btn-lg pull-right"
                                role="button">
                                <i class="fas fa-cart-plus"></i>
                            </a>
                        </div>
                    </div>

                </div>

            </div>


        </div>
        {{/each}}
    </div>


    {{/each}}

</div>
